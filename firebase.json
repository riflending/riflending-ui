{
  "hosting": [
    {
      "target": "test",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [{
        "source" : "**",
        "headers" : [{
          "key" : "Pragma",
          "value" : "no-cache"
        }, {
          "key" : "Cache-Control",
          "value" : "no-store, no-cache, must-revalidate"
        }]
      }],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "prod",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [{
        "source" : "**",
        "headers" : [{
          "key" : "Pragma",
          "value" : "no-cache"
        }, {
          "key" : "Cache-Control",
          "value" : "no-store, no-cache, must-revalidate"
        }]
      }],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ]
}
